                                <Insets left="150.0" right="150.0"  />
                            </VBox.margin>
                        </Button>
                    </children>
                    <StackPane.margin>
                        <Insets />
                    </StackPane.margin>
                </VBox>
            </children>
        </StackPane>
    </children>
