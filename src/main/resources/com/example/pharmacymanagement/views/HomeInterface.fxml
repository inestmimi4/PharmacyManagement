<StackPane maxHeight="857.0" maxWidth="1200.0" minHeight="571.333" minWidth="800.0" prefHeight="857.0" prefWidth="1200.0" style="-fx-background-color: #FFFF;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pharmacymanagement.controllers.HomeController">
    <children>
        <ImageView fitHeight="376.0" fitWidth="254.0" pickOnBounds="true" preserveRatio="true" smooth="false" StackPane.alignment="BOTTOM_RIGHT">

        </ImageView>
        <ImageView fitHeight="522.0" fitWidth="271.0" pickOnBounds="true" preserveRatio="true" smooth="false" StackPane.alignment="CENTER_LEFT">

        </ImageView>
        <ImageView fitHeight="300.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true" smooth="false" StackPane.alignment="TOP_RIGHT">

            <StackPane.margin>
                <Insets top="100.0" />
            </StackPane.margin>
        </ImageView>
        <StackPane id="dialog" prefHeight="150.0" prefWidth="200.0">
            <StackPane.margin>
                <Insets bottom="80.0" left="100.0" right="100.0" top="80.0" />
            </StackPane.margin>
            <children>
                <VBox alignment="CENTER" spacing="20.0" prefHeight="642.0" prefWidth="843.0" style="-fx-background-color: #F9FAFF;" styleClass="pane-round-corners">
                    <children>
                        <HBox alignment="CENTER" spacing="10">
                            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@images/logo.png" />
                                </image>
                            </ImageView>
                            <Label id="Title" alignment="CENTER" styleClass="title-text-dialog" text="SanaPharm" textFill="#334564">
                                <VBox.margin>
                                    <Insets top="50.0" />
                                </VBox.margin>
                                <font>
                                    <Font name="Redressed Regular" size="69.0" />
                                </font>
                            </Label>
                        </HBox>
